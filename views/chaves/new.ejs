<main role="main" class="col-10 ml-auto px-4">
  <div class="d-flex justify-content-between align-items-center mt-4 border-bottom pb-2 mb-3">
    <h1 class="h2"><%= title %> </h1>
    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
      <div class="btn-group mr-2" role="group" aria-label="First group">
        <a class="btn btn-primary" href="/chaves"><i class="fa fa-arrow-left" aria-hidden="true"></i> Voltar</a>
      </div>
    </div>
</div>
<!--section da main-->
<section class="row">
 
<div class="col-12"> 
  <div class="card">
    <div class="card-header">Cadastrar chaves</div>
    <br>
    <form class="col-6" method="POST" action="/chaves/salvar_chave">
    <div class="form-group">
        <label for="exampleInputEmail1">Endereço imóvel:</label>
        <input type="text" name="endereco" class="form-control" id="exampleInputText1" aria-describedby="emailHelp">
    </div>
      <div class="row">
        <div class="form-group col-6">
          <label for="exampleInputPassword1">Tipo imóvel:</label>
          <select name="tipoimovel" class="form-control" id="">
          <% tipos.forEach(tipo => { %>
              <option value="<%= tipo.id %> " class="form-control"><%= tipo.descricao %> </option>
          <% }) %>
          </select>
        </div>
        <div class="form-group col-6">
          <label for="exampleInputPassword1">Bairro:</label>
          <select name="bairro" class="form-control" id="">
            <% bairros.forEach(bairro => { %>
                <option value="<%= bairro.id %> " class="form-control"><%= bairro.descricao %> </option>
            <% }) %>
            </select>
        </div>
      <!-- foms chaves-->
      <div class="form-group col-4">
        <label for="exampleInputPassword1">Chaves comuns:</label>
        <input type="text" name="chavescomuns" class="form-control" id="exampleInputText1" aria-describedby="emailHelp">
      </div>
      <div class="form-group col-4">
        <label for="exampleInputPassword1">Chaves tetras:</label>
        <input type="text" name="chavestetra" class="form-control" id="exampleInputText1" aria-describedby="emailHelp">
      </div>
      <div class="form-group col-4">
        <label for="exampleInputPassword1">Controles:</label>
        <input type="text" name="controles" class="form-control" id="exampleInputText1" aria-describedby="emailHelp">
      </div>
      <input type="hidden" name="situacao" id="" value="Disponível">
      </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
    <br>
  </div>
</div>
